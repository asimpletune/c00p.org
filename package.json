{
  "name": "c00p.org",
  "private": true,
  "version": "1.0.0",
  "description": "A website to promote cooperatives as an alternative to home ownership, by helping people organize so they can share the collective savings.",
  "scripts": {
    "build": "zola build && npx tailwindcss -i ./public/input.css -o ./public/style.css -m",
    "serve": "zola serve --interface 0.0.0.0 & npx tailwindcss -i ./public/input.css -o ./public/style.css --watch && wait",
    "serve-browse": "zola serve --open --interface 0.0.0.0 & npx tailwindcss -i ./public/input.css -o ./public/style.css --watch && wait",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asimpletune/c00p.org"
  },
  "author": "Spencer Scorcelletti",
  "license": "UNLICENSED",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "tailwindcss": "^3.3.1"
  }
}
